@model ItemBanking.Models.Item

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <h1 class="display-4 my-4">Edit of <span dir="@(Model.Category.ItemBank.Language.IsRightToLeft?"rtl":"ltr")">@Model.Name</span></h1>
    <div class="row">
        <div class="col-md-6 @(Model.Category.ItemBank.Language.IsRightToLeft?"text-right":"text-left")" dir="@(Model.Category.ItemBank.Language.IsRightToLeft?"rtl":"ltr")">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-secondary ml-2" asp-action="Index" asp-route-id="@Model.Category.ItemBank.Id">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
